<launch>
  <arg name="map" value="icra2019"/>
  <arg name="world" value="icra2019_dual"/>
  <master auto="start"/>
  <param name="/use_sim_time" value="true"/>

  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find roborts_bringup)/maps/$(arg map).yaml" respawn="false" />

  <!-- Run the stage simulator -->
  <node pkg="stage_ros" type="stageros" name="stageros" args="$(find roborts_bringup)/worlds/$(arg world).world" respawn="false">
    <param name="base_watchdog_timeout" value="0.01" />
  </node>

  <!-- Laser filter -->
  <node ns="robot_0" pkg="laser_filters" type="scan_to_scan_filter_chain" output="screen" name="laser_filters">
    <rosparam command="load" file="$(find laser_filters)/examples/range_filter.yaml" />
    <remap from="scan" to="base_scan"/>
    <remap from="scan_filtered_before_fusion" to="scan_filtered"/>
  </node>

  <!-- Run the localization node -->
  <node ns="robot_0" pkg="roborts_localization" type="localization_node" name="localization_node" output="screen" respawn="false">
    <rosparam command="load" file="$(find roborts_localization)/config/localization_0.yaml" />
    <rosparam command="load" file="$(find roborts_localization)/amcl/config/amcl.yaml" />
  </node>

  <!-- Run the global planner Node -->
  <node ns="robot_0" pkg="roborts_planning" type="global_planner_node" name="global_planner_node" respawn="false">
    <rosparam command="load" file="$(find roborts_planning)/global_planner/config/global_planner_0.yaml" />
  </node>

  <!-- Run the local planner node -->
  <node ns="robot_0" pkg="roborts_planning" type="local_planner_node" name="local_planner_node" respawn="false">
    <rosparam command="load" file="$(find roborts_planning)/local_planner/config/local_planner_0.yaml" />
  </node>

  <!-- Run the velocity converter node -->
  <node ns="robot_0" pkg="roborts_planning" type="vel_converter" name="vel_converter_node" respawn="false" />

  <!-- Laser filter -->
  <node ns="robot_1" pkg="laser_filters" type="scan_to_scan_filter_chain" output="screen" name="laser_filters">
    <rosparam command="load" file="$(find laser_filters)/examples/range_filter.yaml" />
    <remap from="scan" to="base_scan"/>
    <remap from="scan_filtered_before_fusion" to="scan_filtered"/>
  </node>

  <!-- Run the localization node -->
  <node ns="robot_1" pkg="roborts_localization" type="localization_node" name="localization_node" output="screen" respawn="false">
    <rosparam command="load" file="$(find roborts_localization)/config/localization_1.yaml" />
    <rosparam command="load" file="$(find roborts_localization)/amcl/config/amcl.yaml" />
  </node>

  <!-- Run the global planner Node -->
  <node ns="robot_1" pkg="roborts_planning" type="global_planner_node" name="global_planner_node" respawn="false">
    <rosparam command="load" file="$(find roborts_planning)/global_planner/config/global_planner_1.yaml" />
  </node>

  <!-- Run the local planner node -->
  <node ns="robot_1" pkg="roborts_planning" type="local_planner_node" name="local_planner_node" respawn="false">
    <rosparam command="load" file="$(find roborts_planning)/local_planner/config/local_planner_1.yaml" />
  </node>

  <!-- Run the velocity converter node -->
  <node ns="robot_1" pkg="roborts_planning" type="vel_converter" name="vel_converter_node" respawn="false" />

  <!-- Run the pose_update node -->
  <node ns="robot_0" pkg="decision" type="pose_update.py" name="pose_update" respawn="false" />

  <!-- Run the fake_service node -->
  <!--node ns="robot_0" pkg="decision" type="fake_service.py" name="fake_service" respawn="false" /-->

  <!-- Run the enemy_detect node -->
  <node ns="robot_0" pkg="decision" type="enemy_detect_dual.py" name="enemy_detect" respawn="false" />

  <!-- Run the decision node -->
  <node ns="robot_0" pkg="decision" type="fake_service.py" name="fake_service" output="screen" respawn="false" />

  <!-- Run the decision node -->
  <!--node ns="robot_0" pkg="decision" type="decision_node.py" name="decision_node" output="screen" respawn="false" /-->

  <!-- Run the rviz -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find roborts_bringup)/rviz/dual.rviz" />
</launch>
